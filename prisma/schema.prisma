generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // You can use PostgreSQL on Vercel
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String?
  basePrice   Float
  category    String
  comboItems  ComboItem[]
}

model Combo {
  id            String      @id @default(uuid())
  name          String
  description   String?
  discountType  String
  discountValue Float
  startDate     DateTime?
  endDate       DateTime?
  active        Boolean
  minDuration   Int?
  items         ComboItem[]
}

model ComboItem {
  id        Int     @id @default(autoincrement())
  combo     Combo   @relation(fields: [comboId], references: [id], onDelete: Cascade)
  comboId   String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  quantity  Int

  @@index([comboId])
  @@index([productId])
}
